

<h1><%= t('articles.articles_new')%></h1>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br/>
    <%= f.text_area :text %>
  </p>

  <p>


    <%= hidden_field_tag :user_id, current_user.id %>

    <!-- I stay this code for example. It works too. -->
    <!-- <%= f.hidden_field :user_id, value: current_user.id %> -->
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>
