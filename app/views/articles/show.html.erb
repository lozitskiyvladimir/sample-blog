<h1><%= @article.title %></h1>

<p>
  <%= @article.text %>
</p>
<br/>
<br/>

<h2>Comments:</h2>
<br/>
<% @article.comments.each do |comment| %>
    <p>
        <i><%= comment.author %> said:</i>
        <br/>
        <br/>
        <%= comment.body %></br>
        <h6><%= comment.created_at%></h6><br/>
        <hr/>
    </p>

  <% end %>

<h2>Add comment:</h2>
<%= form_for ([@article, @article.comments.build]) do |f| %>
<p>
  <%= f.label :author %><br/>
  <%= f.text_field :author %>
</p>

<p>
  <%= f.label :body %><br/>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
